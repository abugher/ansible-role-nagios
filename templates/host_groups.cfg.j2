{% for group in groups %}
  {%- if 'ungrouped' != group %}
define hostgroup {
  hostgroup_name        {{ group }}
  alias                 {{ group }}
    {%- for host in groups[group] %}
      {%- if host in groups['monitored'] %}

  members               {% for host in groups[group] %}{% if host in groups['monitored'] %}{{ host }},{% endif %}{% endfor %}
        {%- break %}
      {%- endif %}
    {%- endfor %}

}
  {%- endif %}

{% endfor %}
