#!/bin/bash

happy=0
warning=1
critical=2
success_file='/var/log/rsync_data.last_success'

target="${1}"

max_age_days=2
max_time_since_success=$(( 60 * 60 * 24 * $max_age_days ))

if ! now_timestamp="$(ssh "${target}" date "+%s")"; then
  echo "rsync data:  Critical:  Failed to obtain current timestamp."
  exit $critical
fi

if ! last_success_timestamp="$(ssh "${target}" stat -c %Y "${success_file}")"; then
  echo "rsync data:  Critical:  Failed to obtain timestamp of last success."
  exit $critical
fi

time_since_success=$(( now_timestamp - last_success_timestamp ))

if
  test $time_since_success -gt $max_time_since_success \
  || test $time_since_success -le 0
then
  echo "rsync data:  Critical!  Last success was $(seconds_to_human "${time_since_success}") ago."
  exit $critical
fi
echo "rsync data:  OK.  Last success was $(seconds_to_human "${time_since_success}") ago."
exit $happy
